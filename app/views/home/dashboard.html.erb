<div class="dash-bdy">
  <div class = "container">
    <div class="form-div">
      <div class="row">
        <div class="col-lg-3">
          <%= form_tag home_dashboard_path, method: :get do %>
            <%= label_tag 'Enter a keyword'%>
            <%= text_field_tag :tweet %>
            <%= submit_tag 'Search' %>
          <% end %>
        </div>
        <div class="col-lg-9">
          <% if params[:tweet] %>
            <table class='table-trd'>
              <tr>
                <td>Number of unique users tweeting the same keyword: </td>
                <td><%= @no_of_unique_users %></td>
              </tr>
              <tr>
                <td>Number of tweets: </td>
                <td><%= @no_of_tweets %></td>
              </tr>
              <tr>
                <td>Number of retweets: </td>
                <td><%= @no_of_retweets %></td>
              </tr>
            </table>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>

